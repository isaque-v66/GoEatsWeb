generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}




model User { 
  id            String @id @default(uuid()) 
  email         String @unique 
  passwordHash  String 

  companyId     String 
  company       Company @relation(fields: [companyId], references: [id]) 

  itemConfigs   UserItemConfig[]
  orders        Order[]
  sessions      Session[]

  isActive      Boolean  @default(true) 
  createdAt     DateTime @default(now()) 
  updatedAt     DateTime @updatedAt 

  @@index([companyId])
  @@map("users") 
}






model Company { 
  id          String @id @default(uuid()) 
  cnpj        String @unique 
  socialName  String 

  users       User[] 
  orders      Order[] 
  isActive    Boolean @default(true) 

  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @updatedAt 
  @@map("companies") 
  }



model Item {
  id         String   @id @default(uuid())
  name       String

  mealType   MealType

  configs    UserItemConfig[]
  orderItems OrderItem[]

  createdAt  DateTime @default(now())

  @@unique([name, mealType])
}






model Subcategory {
  id      String @id @default(uuid())
  name    String


  mealType   MealType
  configs    UserSubcategoryConfig[]
  orderItems OrderItem[]

  @@unique([name, mealType])
}





model UserItemConfig {
  id        String @id @default(uuid())

  userId    String
  user      User   @relation(fields: [userId], references: [id])

  itemId    String
  item      Item   @relation(fields: [itemId], references: [id])

  defaultQuantity Int?

  subcategories UserSubcategoryConfig[]

  @@unique([userId, itemId])
  @@index([userId])
  @@index([itemId])
}





model UserSubcategoryConfig {
  id            String @id @default(uuid())

  userItemId    String
  userItem      UserItemConfig @relation(fields: [userItemId], references: [id])

  subcategoryId String
  subcategory   Subcategory @relation(fields: [subcategoryId], references: [id])

  defaultQuantity Int?

  @@unique([userItemId, subcategoryId])
  @@index([userItemId])
  @@index([subcategoryId])
}



enum MealType {
  DESJEJUM
  ALMOCO
  CAFE_TARDE
  JANTAR
  CEIA
  LANCHE
  BEBIDAS
  CAFE_NOTURNO
}





model Order {
  id        String   @id @default(uuid())

  userId    String
  user      User     @relation(fields: [userId], references: [id])

  companyId String
  company   Company  @relation(fields: [companyId], references: [id])

  mealType  MealType
  date      DateTime
  comments  String?

  items     OrderItem[]

  createdAt DateTime @default(now())

  @@unique([companyId, date, mealType])
  @@index([companyId])
}






model OrderItem {
  id            String @id @default(uuid())

  orderId       String
  order         Order  @relation(fields: [orderId], references: [id])

  itemId        String
  item          Item   @relation(fields: [itemId], references: [id])

  subcategoryId String?
  subcategory   Subcategory? @relation(fields: [subcategoryId], references: [id])

  quantity      Int
  customText    String?

  createdAt     DateTime @default(now())
  @@index([orderId])
  @@index([itemId])
  @@index([subcategoryId])
}




model Session {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime

  @@index([expiresAt])
  @@index([userId])
}






